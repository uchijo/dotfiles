# vim-like line editor
bindkey -v
bindkey "jj" vi-cmd-mode

# git prompt setting
autoload -Uz vcs_info
setopt prompt_subst

zstyle ':vcs_info:*' formats "
%F{yellow}(%r %b)%f%c%u"
zstyle ':vcs_info:*' actionformats "
%F{yellow}(%r %b | %a)%f%c%u"
precmd () { vcs_info }

PROMPT_COLOR=${PROMPT_COLOR:-'green'}

# command prompt setting
PROMPT='
%F{$PROMPT_COLOR}%n@%m%f:%F{033}%~%f $vcs_info_msg_0_
$ '

# alias for commands
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'

# run each distro specific settings. judge is done by each file.
source ~/dotfiles/distro_settings/*

# GOPATH settings
export GOPATH=$HOME/go

# git command setting
fpath=(~/.zsh/completion $fpath)
autoload -U compinit
compinit -u
zmodload -i zsh/complist

# completion settings
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'
zstyle ':completion:*' menu select

# completion with vim commands
bindkey -M menuselect 'h' vi-backward-char
bindkey -M menuselect 'k' vi-up-line-or-history
bindkey -M menuselect 'l' vi-forward-char
bindkey -M menuselect 'j' vi-down-line-or-history
bindkey -v '^?' backward-delete-char

# zsh text object settings
autoload -U select-bracketed
zle -N select-bracketed
for m in visual viopp; do
	for c in {a,i}${(s..)^:-'()[]{}<>bB'}; do
		bindkey -M $m $c select-bracketed
	done
done

autoload -U select-quoted
zle -N select-quoted
for m in visual viopp; do
  for c in {a,i}{\',\",\`}; do
    bindkey -M $m $c select-quoted
  done
done

autoload -Uz surround
zle -N delete-surround surround
zle -N change-surround surround
zle -N add-surround surround
bindkey -a cs change-surround
bindkey -a ds delete-surround
bindkey -a ys add-surround
bindkey -M visual S add-surround

# zsh-autosuggestions settings
source ~/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

# zsh-syntax-highlighting settings
source ~/.zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# search history with fzf

function fzf-select-history() {
	BUFFER=$(history -n -r | uniq | fzf)
	CURSOR=$#BUFFER
	zle reset-prompt
}
zle -N fzf-select-history
bindkey '^[h' fzf-select-history

# append scripts
export PATH="$PATH:$HOME/dotfiles/scripts"

